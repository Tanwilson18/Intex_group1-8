@{
    ViewData["Title"] = "Burial Summary";
}

@model BurialmainViewModel

<div class="text-center">
    <h1 class="display-4">Burial Summary</h1>
</div>

@foreach (Burialmain b in Model.Burialmains)
{
    <div class="container">
        <div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h4>
                    @b.Burialid
                </h4>
            </div>
            <div class="card-text p-1">Area: @b.Squarenorthsouth @b.Squareeastwest @b.Area</div>
            <div class="card-text p-1">Burial Number: @b.Burialnumber</div>
            @if (@b.Text != "")
            {
                <div class="card-text p-1">Info: @b.Text</div>
            }
            else if (ViewBag.description != "")
            {
                <div class="card-text p-1">Info: @ViewBag.description</div>
            }
            else
            {
                <div class="card-text p-1">Info: @ViewBag.notes</div>
            }


        </div>
    </div>
 }
    <!-- Page Number buttons to switch pages-->
<div page-model="@Model.PageInfo" page-action="BurialSummary" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>