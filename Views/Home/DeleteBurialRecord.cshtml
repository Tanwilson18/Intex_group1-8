@{
    ViewData["Title"] = "Record Deletion";
}

<!-- Model Declaration -->
@model Burialmain
<!-- Top of Page Information -->
<h2 class="text-center">Confirm Deletion</h2>
<h3 class="text-center">Are you sure you want to delete this record?</h3>

<!-- Buttons with form to submit delete and cancelation-->
<form method="post" asp-controller="Home" asp-action="DeleteBurialRecord" class="text-center">
    <button type="submit" class="btn btn-dark">Delete</button>
    <a asp-controller="Home" asp-action="BurialSummary" class="btn btn-dark">Cancel</a>

    <input type="hidden" asp-for="Id" class="btn btn-dark"/>
</form>